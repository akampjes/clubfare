<% if ! signed_in? %>

<p>Authorisation required. Please <%= link_to 'sign in', signin_path %> first.</p>

<% else %>

	<%= form_tag beers_path, :method => 'get' do %>
	<p>
		<%= text_field_tag :search, params[:search] %>
		<%= submit_tag "Search", :name => nil %>
	</p>
	<% end %>

<table class="beers-table">
  <thead>
    <tr class="beer-list-headers">
      <th>Beer name</th>
      <th>Brewer</th>
      <th>Beer format</th>
      <th>Beer price</th>
      <th>Freight</th>
      <th>Style</th>
      <th>Beer abv</th>
      <th>Beer note</th>
      <th>Location</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody class="beers-table-body">
    <% @beers.each do |beer| %>
	<tr class="<%= cycle('oddbeer','evenbeer') %>">
        <td><%= beer.name %></td>
        <td><%= beer.brewer.name %></td>
        <td><%= beer.format.name %></td>
        <td><%= number_to_currency(beer.price, precision: 2) %></td>
        <td><%= number_to_currency(beer.freight, precision: 2) %></td>
        <td><%= beer.style.name %></td>
        <td><%= number_to_percentage(beer.abv, precision: 2) %></td>
        <td class="smalltext"><%= beer.note %></td>
        <td><%= beer.location.name %></td>
        <td><%= link_to 'Details', beer %></td>
        <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
        <td><%= link_to 'Delete', beer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to image_tag('icons/serving-small.png'), beer_path(beer, beer: { location_id: 6 }), :method => :patch %></td>
        <td><%= link_to image_tag('icons/low-small.png'), beer_path(beer, beer: { location_id: 7 }), :method => :patch %></td>
        <td><%= link_to image_tag('icons/next-small.png'), beer_path(beer, beer: { location_id: 8 }), :method => :patch %></td>
        <td><%= link_to image_tag('icons/empty-small.png'), beer_path(beer, beer: { location_id: 9 }), :method => :patch %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
	<%= will_paginate @beers %>
	<%= link_to 'New Beer', new_beer_path %>
<% end %>
