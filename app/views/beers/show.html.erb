<p id="notice"><%= notice %></p>

<p>
  <strong>Beer name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Brewer:</strong>
  <%= @beer.brewer.name %>
</p>

<p>
  <strong>Beer format:</strong>
  <%= @beer.format.name %>
</p>

<p>
  <strong>Beer price:</strong>
  <%= number_to_currency(@beer.price, precision: 2) %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style.name %>
</p>

<p>
  <strong>Beer abv:</strong>
  <%= number_to_percentage(@beer.abv, precision: 2) %>
</p>

<p>
  <strong>Beer note:</strong>
  <%= @beer.note %>
</p>

<p>
  <strong>Location:</strong>
  <%= @beer.location.name %>
</p>

<p>
  <strong>Pricing: </strong>
  <p><strong>500ml : <%= beer_price(@beer, 0.5, :tap) %></strong></p>
  <p><strong>250ml : <%=  beer_price(@beer, 0.25, :tap) %></strong></p>
  <p><strong>1125ml : <%= beer_price(@beer, 1.125, :off) %></strong></p>
  <p><strong>1500ml : <%= beer_price(@beer, 1.500, :off) %></strong></p>
  <p><strong>2000ml : <%= beer_price(@beer, 2.000, :off) %></strong></p>
  <p><strong>3000ml : <%= beer_price(@beer, 3.000, :off) %></strong></p>
</p>

<%= link_to 'Labels', beers_label_path(@beer) %> | 
<%= link_to 'Edit', edit_beer_path(@beer) %> |
<%= link_to 'Back', beers_path %>
