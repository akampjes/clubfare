<% if ! signed_in? %>

<p>Authorisation required. Please <%= link_to 'sign in', signin_path %> first.</p>

<% else %>

<table class="users-table">
  <thead>
    <tr class="user-list-headers">
      <th>User name</th>
      <th>User email</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody class="users-table-body">
    <% @users.each do |user| %>
	<tr class="<%= cycle('odd','even') %>">
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Details', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
<% end %>
