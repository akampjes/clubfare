// Vars
$font-stack:	Arial, Helvetica, sans-serif;
$bright-green:	#6BE400;
$pale-green:	#ABF26D;
$dark-green:	#40701A;
$black:			#000000;
$white:			#FFFFFF;

/* Clearfix hack begins */

.cf:before,
.cf:after {
	content: " "; /* 1 */
	display: table; /* 2 */
}

.cf:after {
	clear: both;
}

/* Clearfix hack ends   */

#beer-list {
	font-family:	$font-stack;
	background:		$white;
	color:			$black;
}

#beer-list ul {
	/* Reset everything to 0 for now */	
	list-style: none;
	margin: 0;
	padding: 0;
	
	float: left;
	
	@media(max-width: 800px) {
		width: 100%;
	}
	
	@media(min-width: 801px) {
		width: 50%;
	}
	
	img.dash-handpull {
		position: relative;
		right: 15%;
		float: right;
	}

	li {
		/* Reset everything to 0 for now */
		list-style: none;
		margin: 0;
		padding: 10px 0px 10px 80px;

		background-repeat: no-repeat;
		
		&.serving {
		  background-image: url(<%= asset_path('icons/serving.png') %>);
		}
		
		&.low {
          background-image: url(<%= asset_path('icons/low.png') %>);
		}
		
		&.next {
          background-image: url(<%= asset_path('icons/next.png') %>);
		}
		
		h2 {
			font-size: 17px;
			margin: 0;
		}
		
		font-size: 12px;

		/* Try to work around spliiting inside an element in columnar mode */
		-webkit-column-break-inside: avoid;
		-moz-column-break-inside: avoid;
		-o-column-break-inside: avoid;
		break-inside: avoid-column;
		page-break-inside: avoid;
	}
}
